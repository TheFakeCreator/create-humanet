{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Humanet Configuration Schema",
  "description": "Schema for validating .humanet/config.yml files",
  "type": "object",
  "required": ["humanet"],
  "properties": {
    "humanet": {
      "type": "object",
      "required": ["version", "name", "status", "domains", "maintainers", "license"],
      "properties": {
        "version": {
          "type": "string",
          "enum": ["1.0"],
          "description": "Schema version"
        },
        "id": {
          "type": "string",
          "description": "Unique identifier (assigned by platform)"
        },
        "name": {
          "type": "string",
          "minLength": 3,
          "maxLength": 100,
          "description": "Idea name"
        },
        "tagline": {
          "type": "string",
          "maxLength": 200,
          "description": "Brief one-line description"
        },
        "description": {
          "type": "string",
          "description": "Detailed description"
        },
        "created": {
          "type": "string",
          "format": "date",
          "description": "Creation date (YYYY-MM-DD)"
        },
        "updated": {
          "type": "string",
          "format": "date",
          "description": "Last update date (YYYY-MM-DD)"
        },
        "status": {
          "type": "string",
          "enum": ["provisional", "validated", "active", "dormant", "archived", "deprecated"],
          "description": "Current lifecycle status"
        },
        "status_history": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["status", "date"],
            "properties": {
              "status": {
                "type": "string"
              },
              "date": {
                "type": "string",
                "format": "date"
              },
              "note": {
                "type": "string"
              }
            }
          }
        },
        "provisional_deadline": {
          "type": ["string", "null"],
          "format": "date"
        },
        "domains": {
          "type": "array",
          "minItems": 1,
          "maxItems": 5,
          "items": {
            "type": "string",
            "enum": [
              "ai-ml",
              "blockchain",
              "climate-tech",
              "dev-tools",
              "education",
              "finance",
              "healthcare",
              "knowledge-management",
              "productivity",
              "research-tools",
              "social-impact",
              "web3",
              "other"
            ]
          },
          "description": "Primary domains (1-5)"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "maintainers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["username", "role", "joined"],
            "properties": {
              "username": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9_-]+$"
              },
              "role": {
                "type": "string"
              },
              "joined": {
                "type": "string",
                "format": "date"
              },
              "karma": {
                "type": "number"
              }
            }
          }
        },
        "contributors": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "parent": {
          "type": ["string", "null"]
        },
        "forks": {
          "type": "array"
        },
        "branches": {
          "type": "array"
        },
        "related": {
          "type": "array"
        },
        "last_evaluated": {
          "type": ["string", "null"]
        },
        "evaluation_score": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 100
        },
        "validation_status": {
          "type": "string",
          "enum": ["pending", "passed", "failed", "in-review"]
        },
        "evaluation_criteria": {
          "type": "object",
          "properties": {
            "clarity": {
              "type": ["number", "null"],
              "minimum": 0,
              "maximum": 100
            },
            "feasibility": {
              "type": ["number", "null"],
              "minimum": 0,
              "maximum": 100
            },
            "impact": {
              "type": ["number", "null"],
              "minimum": 0,
              "maximum": 100
            },
            "originality": {
              "type": ["number", "null"],
              "minimum": 0,
              "maximum": 100
            },
            "completeness": {
              "type": ["number", "null"],
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "ai_feedback": {
          "type": ["string", "null"]
        },
        "platform_url": {
          "type": ["string", "null"],
          "format": "uri"
        },
        "repository_url": {
          "type": "string",
          "format": "uri"
        },
        "links": {
          "type": "object",
          "properties": {
            "website": {
              "type": "string"
            },
            "documentation": {
              "type": "string"
            },
            "demo": {
              "type": "string"
            },
            "prototype": {
              "type": "string"
            },
            "discussion": {
              "type": "string"
            }
          }
        },
        "license": {
          "type": "string",
          "enum": ["CC-BY-4.0", "CC-BY-SA-4.0", "MIT", "Unlicense", "Apache-2.0"]
        },
        "accepting_contributions": {
          "type": "boolean"
        },
        "contribution_guidelines": {
          "type": "string"
        },
        "contact": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string"
            },
            "discord": {
              "type": "string"
            },
            "twitter": {
              "type": "string"
            }
          }
        },
        "metrics": {
          "type": "object",
          "properties": {
            "last_commit": {
              "type": ["string", "null"]
            },
            "commit_count": {
              "type": "number"
            },
            "views": {
              "type": "number"
            },
            "stars": {
              "type": "number"
            },
            "forks": {
              "type": "number"
            },
            "contributors_count": {
              "type": "number"
            },
            "discussions_count": {
              "type": "number"
            },
            "total_karma_distributed": {
              "type": "number"
            }
          }
        }
      }
    }
  }
}
